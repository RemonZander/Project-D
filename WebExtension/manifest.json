{
    "manifest_version": 3,
    "name":    "bol.com image search",
    "version": "0.1",
    "background": {
        "service_worker": "serviceWorker.js"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*/",
        "http://*/"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["bolExtension.css"]
        }
      ],
      "web_accessible_resources" : [
        {
            "resources": [ "/images/*" ],
            "matches": ["<all_urls>"]
        }
     ],
    "action": {
        "default_title": "Bol.com Image Search"
    }
}